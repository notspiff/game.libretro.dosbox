<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.dosbox"
        name="DOS (DOSBox)"
        version="0.74.0"
        provider-name="Libretro">
    <requires>
        <import addon="game.libretro" version="1.0.0"/>
    </requires>
    <extension point="kodi.gameclient"
               library_android="libgame.libretro.dosbox.so"
               library_linux="game.libretro.dosbox.so"
               library_osx="game.libretro.dosbox.dylib"
               library_windx="game.libretro.dosbox.dll"
               library_wingl="game.libretro.dosbox.dll">
        <platforms></platforms>
                <extensions>exe|com|bat|conf</extensions>
                <supports_vfs>false</supports_vfs>
                <supports_no_game>false</supports_no_game>
                <supports_keyboard>true</supports_keyboard>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">DOSBox v0.74</summary>
        <description>DOSBox emulates an IBM PC compatible computer running MS-DOS. DOSBox can be configured to run a wide range of DOS games, from CGA/Tandy/PCjr classics up to games from the Quake era.

Supported files: .exe, .com, .bat, .conf. If loading exe/com/bat the system directory will be searched for a 'dosbox.conf' file to load. If loading a *.conf file DOSBox will be loaded with the options in the config file.

License: GPLv2</description>
        <platform>all</platform>
        <nofanart>true</nofanart>
    </extension>
</addon>
